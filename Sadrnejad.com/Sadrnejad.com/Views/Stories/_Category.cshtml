@model IEnumerable<Sadrnejad.com.Models.Category>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Title, "CategoryIndex", new { categoryID = item.ID })
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit","Categories", new { id = item.ID },null)
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

